# Database Configuration
# Local Development (MAMP)
DB_HOST="localhost"
DB_USER="root"
DB_PASSWORD="root"
DB_NAME="ajans1"
DB_PORT="8889"

# Production (Vercel) - Replace with your database credentials
# DB_HOST="your-database-host"
# DB_USER="your-database-user"
# DB_PASSWORD="your-database-password"
# DB_NAME="ajans1"
# DB_PORT="3306"

# Supabase Database Configuration (Optional for Production)
NEXT_PUBLIC_SUPABASE_URL="your-supabase-project-url"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-supabase-anon-key"

# SQLite Database Configuration (Fallback)
DB_PATH="./ajans1.db"

# Next.js Configuration
NEXTAUTH_URL="http://localhost:3002"
NEXTAUTH_SECRET="your-secret-key-here"

# ⚠️ ÖNEMLİ: Production'da domain adınızı yazın!
# Bu metadata, og:image ve canonical URL'ler için kullanılır
NEXT_PUBLIC_APP_URL="http://localhost:3002"  # Development
# NEXT_PUBLIC_APP_URL="https://yourdomain.com"  # Production

# JWT Secret
JWT_SECRET="your-jwt-secret-key-change-in-production"

# Unsplash API (https://unsplash.com/developers)
UNSPLASH_ACCESS_KEY="your-unsplash-access-key-here"

# Google Analytics Configuration
GA_PROPERTY_ID="your-ga4-property-id"
GA_CREDENTIALS='{"type":"service_account","project_id":"your-project",...}'

# Email Configuration (Choose one)
EMAIL_SERVICE="nodemailer" # or "resend"

# Nodemailer (SMTP)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
EMAIL_FROM="noreply@yourdomain.com"

# Resend (https://resend.com)
RESEND_API_KEY="re_xxxxxxxxxxxx"

# Twilio (SMS & WhatsApp)
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="+1234567890"

# Google Calendar API (for appointments sync)
GOOGLE_CALENDAR_CLIENT_ID="your-client-id.apps.googleusercontent.com"
GOOGLE_CALENDAR_CLIENT_SECRET="your-client-secret"
GOOGLE_CALENDAR_REDIRECT_URI="http://localhost:3002/api/auth/google/callback"
GOOGLE_CALENDAR_REFRESH_TOKEN="your-refresh-token"
GOOGLE_CALENDAR_ID="primary" # or specific calendar ID

# WhatsApp Business API (Alternative to Twilio)
WHATSAPP_API_TOKEN="your-whatsapp-business-api-token"
WHATSAPP_PHONE_NUMBER_ID="your-phone-number-id"
